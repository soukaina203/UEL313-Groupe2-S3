{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
	<div class="row">
		{% for link in links %}
			<div class="col-md-4">
				<div class="card">
					<div class="card-header">
						<h2>
							<a class="linkTitle" href="{{ path('link', { 'id': link.id }) }}">
								{{ link.title }}
							</a>
						</h2>
					</div>
					<div class="card-body">
						<p class="card-text">{{ link.desc }}</p>
						<a href="{{ link.url }}" title="" target="_blank">Open ></a>
						<em>(by {{ link.user.username }})</em>
						{% for tag in link.tags %}
							<a href="{{ path('tag', { 'id': tag.id }) }}" title="Filtrer">
								{{ tag.title }}
							</a>
						{% endfor %}
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
