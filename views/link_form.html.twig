{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<div class="well">
{{ form_start(linkForm, { 'attr': {'class': 'form-horizontal w-50 d-flex flex-column ms-auto me-auto'} }) }}
    <div class="form-group">
        {{ form_label(linkForm.url, null, { 'label_attr':  {
            'class': 'col-sm control-label'
        }}) }}
        <div class="col-sm">
            {{ form_errors(linkForm.url) }}
            {{ form_widget(linkForm.url, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(linkForm.title, null, { 'label_attr':  {
            'class': 'col-sm control-label'
        }}) }}
        <div class="col-sm">
            {{ form_errors(linkForm.title) }}
            {{ form_widget(linkForm.title, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>
    
    <div class="form-group">
        {{ form_label(linkForm.desc, null, { 'label_attr':  {
            'class': 'col-sm control-label'
        }}) }}
        <div class="col-sm">
            {{ form_errors(linkForm.desc) }}
            {{ form_widget(linkForm.desc, { 'attr':  {
                'class': 'form-control',
                'rows': '8'
            }}) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(linkForm.tags, null, { 'label_attr':  {
            'class': 'col-sm control-label'
        }}) }}
        <div class="col-sm">
            {{ form_errors(linkForm.tags) }}
            {{ form_widget(linkForm.tags, { 'attr':  {
                'class': 'form-control'
            }}) }}
        </div>
    </div>


    <div class="form-group">
        <div class="d-flex justify-content-center me-auto ms-auto mt-4">
            <input type="submit" class="btn btn-success" value="Save" />
        </div>
    </div>
{{ form_end(linkForm) }}
</div>
{% endblock %}
